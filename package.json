{
  "name": "webapp-schulverwaltung",
  "version": "0.0.0",
  "homepage": "https://github.com/bkd-mba-fbi/webapp-schulverwaltung/blob/main/README.md",
  "bugs": {
    "url": "https://github.com/bkd-mba-fbi/webapp-schulverwaltung/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https@github.com:bkd-mba-fbi/webapp-schulverwaltung.git"
  },
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "start:browserstack": "ng serve --host 0.0.0.0 --disable-host-check --port 8000",
    "build": "ng build",
    "build:prod": "ng build --configuration production",
    "build-and-copy-local": "npm run build:prod && ./scripts/copy-to-portal.sh ../evento-portal/public/apps/webapp-schulverwaltung/",
    "test": "ng test",
    "test:ci": "ng test --watch=false --browsers=ChromeHeadlessCI",
    "test:watch": "ng test --browsers=ChromiumHeadless",
    "test:brief": "ng test --browsers=ChromiumHeadless --reporters brief",
    "test:coverage": "ng test --browsers=ChromiumHeadless --code-coverage --reporters coverage-istanbul",
    "lint": "ng lint",
    "format": "prettier --write \"./**/*\" --ignore-unknown",
    "format:upgrade": "npm install --save-exact prettier@latest && npm run format",
    "preanalyze": "ng build --stats-json",
    "analyze": "npx webpack-bundle-analyzer dist/$(ng config defaultProject)/stats.json",
    "postanalyze": "rm dist/$(ng config defaultProject)/stats.json",
    "unused": "npx knip",
    "prepare": "husky"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "20.0.6",
    "@angular/common": "20.0.6",
    "@angular/compiler": "20.3.15",
    "@angular/core": "20.0.6",
    "@angular/forms": "20.0.6",
    "@angular/localize": "20.0.6",
    "@angular/platform-browser": "20.0.6",
    "@angular/router": "20.0.6",
    "@ng-bootstrap/ng-bootstrap": "19.0.1",
    "@ng-select/ng-select": "15.1.3",
    "@ngx-translate/core": "16.0.4",
    "@ngx-translate/http-loader": "16.0.1",
    "@popperjs/core": "2.11.8",
    "bootstrap": "5.3.7",
    "date-fns": "4.1.0",
    "fp-ts": "2.16.10",
    "io-ts": "2.2.22",
    "io-ts-types": "0.5.19",
    "lodash-es": "4.17.21",
    "monocle-ts": "2.3.13",
    "newtype-ts": "0.3.5",
    "ngx-infinite-scroll": "20.0.0",
    "rxjs": "7.8.2",
    "tslib": "2.8.1",
    "xlsx": "https://cdn.sheetjs.com/xlsx-0.20.3/xlsx-0.20.3.tgz",
    "zone.js": "0.15.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "20.0.5",
    "@angular-eslint/builder": "20.1.1",
    "@angular-eslint/eslint-plugin": "20.1.1",
    "@angular-eslint/eslint-plugin-template": "20.1.1",
    "@angular-eslint/schematics": "20.1.1",
    "@angular-eslint/template-parser": "20.1.1",
    "@angular/cli": "20.0.5",
    "@angular/compiler-cli": "20.0.6",
    "@angular/language-service": "20.0.6",
    "@eslint/eslintrc": "3.3.1",
    "@eslint/js": "9.30.1",
    "@trivago/prettier-plugin-sort-imports": "5.2.2",
    "@types/jasmine": "5.1.8",
    "@types/lodash-es": "4.17.12",
    "@types/node": "24.0.12",
    "angular-eslint": "20.1.1",
    "eslint": "9.30.1",
    "eslint-config-prettier": "10.1.5",
    "html-validate": "9.7.1",
    "husky": "9.1.7",
    "jasmine-core": "5.8.0",
    "karma": "6.4.4",
    "karma-brief-reporter": "0.2.2",
    "karma-chrome-launcher": "3.2.0",
    "karma-coverage-istanbul-reporter": "3.0.3",
    "karma-jasmine": "5.1.0",
    "karma-jasmine-html-reporter": "2.1.0",
    "karma-spec-reporter": "0.0.36",
    "lint-staged": "16.1.2",
    "prettier": "3.6.2",
    "typescript": "5.8.3",
    "typescript-eslint": "8.36.0"
  },
  "lint-staged": {
    "./src/app/**/*.{ts,html}": "eslint",
    "**/*": "prettier --write --ignore-unknown"
  }
}
